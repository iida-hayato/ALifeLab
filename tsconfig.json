{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES2020",
    "lib": [
      "ES2020",
      "dom"
    ],
    "sourceMap": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "removeComments": false,
    "baseUrl": "./",
    "typeRoots": [
      "src/@types"
    ],
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ]
}
